/* pages/page-turning/page-turning.wxss */

#page-flip {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

#r1 {
  position: absolute;
  z-index: 2;
  transition-property: transform, transform-origin;
  transition-duration: 1s;
}

.r1-default {
  transform-origin: 1780rpx 500rpx;
  transform: translate(-1030rpx, -500rpx) rotate(-30deg);
}

.r1-active {
  transform-origin: 2500rpx 500rpx; 
  transform: translate(-1750rpx, -500rpx) rotate(0deg);
}

#p1 {
  overflow: hidden;
}

#p1  view {
  transition-property: transform, transform-origin;
  transition-duration: 1s;
  /* background-image: url('http://img4.imgtn.bdimg.com/it/u=2457680105,4096669953&fm=26&gp=0.jpg'); */
  background-size: 100%;
}

.p1view-default {
  transform-origin: 750rpx 0;
  transform: translate(1030rpx, 500rpx) rotate(30deg);
}

.p1view-active {
  transform-origin: 750rpx 0;
  transform: translate(1750rpx, 500rpx) rotate(0deg);
}

#p2  view {
  box-shadow: 0 0 11rpx rgba(0, 0, 0, 0.5);
  position: absolute;
  z-index: 1;
  /* background-image: url('http://img1.imgtn.bdimg.com/it/u=1000666009,3670998076&fm=15&gp=0.jpg'); */
  background-size: 100%;
}

#r3 {
  transition-property: transform, transform-origin;
  transition-duration: 1s;
  position: absolute;
  z-index: 2;
}

.r3-default { 
  transform-origin: 1780rpx 500rpx;
  transform: translate(-1030rpx, -500rpx) rotate(-30deg);
}

.r3-active {
  transform-origin: 2500rpx 500rpx;
  transform: translate(-1750rpx, -500rpx) rotate(0deg);
}

#p3 {
  overflow: hidden;
}

#p3  view {
  transition-property: transform, transform-origin;
  transition-duration: 1s;
  box-shadow: 0 0 11rpx rgba(0, 0, 0, 0.5);
  background-color: white;
  background-size: 100%;
  overflow: hidden;
}

.p3view-default {
  transform-origin: 0 0;
  transform: translate(1720rpx, 500rpx) rotate(-30deg);
}

.p3view-active {
  transform-origin: 0 0;
  transform: translate(1000rpx, 500rpx) rotate(0deg);
}
